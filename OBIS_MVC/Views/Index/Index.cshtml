@using OBIS_MVC.Models.Entity_Framework;
@model List<TBL_DERS>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-top:15px; text-align:center;">Ders Listesi</h2>
<hr />
<button style="margin-bottom:15px;" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Ders Ekle</button>

<table class="myList">
    <thead>
        <tr style="text-align:center;">
            <th scope="col">DERS AD</th>
            <th scope="col">İŞLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center;">
                <td>@item.DERSAD</td>
                <td>
                    <a href="#" class="btn btn-warning">Güncelle</a>
                    <a href="#" class="btn btn-danger">Sil</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ders Ekleme Paneli</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Çıkış"></button>
            </div>
            <div class="modal-body">
                <form action="/Index/DersEkle/" method="post">
                    <div class="modal-body">
                        <label style="font-weight:bold; margin-bottom:5px">Ders Ad</label>
                        <input type="text" placeholder="Ders Ad Giriniz." name="DERSAD" value="" class="form-control"   /> 
                        <br />
                        <button class="btn btn-success">Kaydet</button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                    </div>                
                </form>
            </div>
        </div>
    </div>
</div>

